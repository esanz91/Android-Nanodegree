<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="MovieTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">?android:attr/colorPrimaryDark</item>
    </style>

    <style name="MovieCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieCaption.LeftDrawable">
        <item name="android:drawableTint">?android:attr/colorPrimaryDark</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
